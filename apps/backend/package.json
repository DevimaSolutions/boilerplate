{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:create": "typeorm-ts-node-esm migration:create",
    "migration:run": "typeorm-ts-node-esm migration:run -d ./src/data-source.ts",
    "migration:revert": "typeorm-ts-node-esm migration:revert -d ./src/data-source.ts",
    "migration:show": "typeorm-ts-node-esm migration:show -d ./src/data-source.ts",
    "gen:api-client": "echo 'Swagger gen will be used to generate api-client package'"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.429.0",
    "@aws-sdk/lib-storage": "^3.429.0",
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/swagger": "^7.1.13",
    "@nestjs/typeorm": "^10.0.0",
    "class-transformer": "^0.5.1",
    "cls-hooked": "^4.2.2",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@types/cls-hooked": "^4.3.6",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.5",
    "@types/multer": "^1.4.8",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "eslint-config-custom": "*",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig": "*",
    "tsconfig-paths": "^3.10.1",
    "typescript": "5.1.6"
  },
  "//resolutions-comments": [
    "We need to downgrade 'jackspeak' version to 2.1.1 to make Jest run properly. ",
    "See more details here: ",
    "https://github.com/getsentry/sentry-javascript/issues/9036#issuecomment-1723189790"
  ],
  "resolutions": {
    "jackspeak": "2.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.(js|ts|tsx)": "eslint --fix",
    "*.(md|json)": "prettier --write"
  }
}
